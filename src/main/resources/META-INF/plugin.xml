<idea-plugin>
  <id>com.wxibm333</id>
  <name>Java Bean to Json</name>
  <version>1.0</version>
  <vendor email="929592332@qq.com" url="https://github.com/wxibm333">wxibm333</vendor>

  <description><![CDATA[
      <a href="https://github.com/wxibm333/ConvertToJsonParam">GitHub</a>
      <p>A simple plugin for converting Java bean to JSON param And carry doc comment</p>
    ]]></description>

  <change-notes><![CDATA[
         <li>1.0 - ConvertToJsonParam plugin init.</li>
         <li>1.0.1 - update plugin info.</li>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="com.wxibm333.ConvertToJsonParamCarryDocCommentAction" class="com.wxibm333.ConvertToJsonParamCarryDocCommentAction" text="ConvertToJsonParamCDC"
      description="Java bean convert to json param">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>